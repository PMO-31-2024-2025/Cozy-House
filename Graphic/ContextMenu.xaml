<Window x:Class="Graphic.ContextMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Context Menu" Height="130" Width="200"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        Topmost="True" ShowInTaskbar="False">
    <Border Background="White" CornerRadius="5" Padding="5" BorderBrush="Gray" BorderThickness="1">
        <StackPanel>
            <MenuItem Header="Копіювати текст" Click="CopyText_Click"/>
            <MenuItem Header="Перейти" Click="Navigate_Click"/>
            <MenuItem Header="Видалити" Click="Delete_Click"/>
            <MenuItem Header="Редагувати" Click="Edit_Click"/>
            <Separator/>
            <MenuItem Header="Назад" Click="Back_Click"/>
        </StackPanel>
    </Border>
</Window>