<Window x:Class="Graphic.FirstWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cozy House" Height="600" Width="1200">
    <Grid VerticalAlignment="Stretch">
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                <GradientStop Color="#5B483A" Offset="0" />
                <GradientStop Color="#262425" Offset="1" />
            </LinearGradientBrush>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="105"/>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Frame x:Name="TopFrame"
               Grid.Row="0"
               Source="MainPage2.xaml"
               NavigationUIVisibility="Hidden"/>

        <Frame x:Name="MainFrame" 
               Grid.Row="1" 
               Source="MainPage.xaml" 
               NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
